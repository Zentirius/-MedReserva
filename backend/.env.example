# Configuración base
PORT=3001

# Base de datos PostgreSQL
DATABASE_URL=postgres://usuario:password@localhost:5432/medreserva

# Email transaccional (opcional)
SENDGRID_API_KEY=REEMPLAZAR_CON_API_KEY_SENDGRID

# Google Maps Distance Matrix (opcional, para cálculo automático de km)
GOOGLE_MAPS_API_KEY=REEMPLAZAR_CON_GOOGLE_MAPS_API_KEY

# Orígenes permitidos para CORS (separados por coma)
# Ejemplo: http://localhost:5500,http://localhost:5173
CORS_ORIGIN=http://localhost:5500

# Configuración de JWT
JWT_SECRET=CAMBIAR_ESTE_SECRET
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Entorno de ejecución
NODE_ENV=development
